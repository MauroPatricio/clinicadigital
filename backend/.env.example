# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/clinicadigital
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/clinicadigital

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend URLs (for CORS)
FRONTEND_WEB_URL=http://localhost:3000
FRONTEND_MOBILE_URL=http://localhost:8081

# Email Configuration (SendGrid/SMTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@clinicadigital.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
MPESA_API_KEY=your-mpesa-api-key
MPESA_PUBLIC_KEY=your-mpesa-public-key
MPESA_SERVICE_PROVIDER_CODE=your-service-provider-code
ESIMA_API_KEY=your-esima-api-key

# Video Call Service (Agora.io)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# Alternative: Zoom SDK
# ZOOM_API_KEY=your-zoom-api-key
# ZOOM_API_SECRET=your-zoom-api-secret

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# File Storage (AWS S3 - Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=clinicadigital-files
AWS_REGION=us-east-1

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Medication Database API (Optional)
DRUGBANK_API_KEY=your-drugbank-api-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
